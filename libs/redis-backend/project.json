{
  "name": "redis-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/redis-backend/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "format": ["esm"],
        "outputPath": "dist/libs/redis-backend",
        "tsConfig": "libs/redis-backend/tsconfig.lib.json",
        "project": "libs/redis-backend/package.json",
        "entryFile": "libs/redis-backend/src/index.ts",
        "assets": [
          {
            "glob": "**/*.json",
            "input": "libs/redis-backend/src",
            "output": "."
          }
        ],
        "external": [
          "dotenv",
          "bull",
          "@the-libs/base-shared",
          "pubsub-js",
          "@bull-board/express",
          "@valkey/valkey-glide",
          "redlock"
        ]
      },
      "dependsOn": [
        {
          "target": "postbuild",
          "projects": "self"
        }
      ]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "tags": []
}
