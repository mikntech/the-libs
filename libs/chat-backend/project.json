{
  "name": "chat-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/chat-backend/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "format": ["esm"],
        "outputPath": "dist/libs/chat-backend",
        "tsConfig": "libs/chat-backend/tsconfig.lib.json",
        "project": "libs/chat-backend/package.json",
        "entryFile": "libs/chat-backend/src/index.ts",
        "assets": [
          {
            "glob": "**/*.json",
            "input": "libs/chat-backend/src",
            "output": "."
          }
        ],
        "external": ["express", "@the-libs/express-backend", "@the-libs/base-shared", "@the-libs/auth-backend", "@the-libs/auth-shared", "@the-libs/chat-shared", "@the-libs/mongo-backend", "@the-libs/redis-backend"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "tags": []
}
